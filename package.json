{
    "name": "energy-management-backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
      "build": "nest build",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
      "start": "nest start",
      "start:dev": "nest start --watch",
      "start:debug": "nest start --debug --watch",
      "start:prod": "node dist/main",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
      "test": "jest",
      "test:file": "jest --",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "npx dotenv -e .env.test -- jest --config ./test/jest-e2e.json --runInBand",
      "migrate:deploy:local": "npx dotenv -e .env.local -- npx prisma migrate deploy --schema prisma/schema.prisma",
      "migrate:deploy:test": "npx dotenv -e .env.test -- npx prisma migrate deploy --schema prisma/schema.prisma",
      "seed:local": "npx dotenv -e .env.local -- npx ts-node scripts/seed-local-db",
      "startMckdThrdPrtyApi": "docker-compose  -f scripts/docker/e2e-docker-compose.yml up -d test-third-party-api"
    },
    "dependencies": {
      "@aws-sdk/client-ses": "^3.377.0",
      "@nestjs/common": "^10.3.0",
      "@nestjs/config": "^3.1.1",
      "@nestjs/core": "^10.3.0",
      "@nestjs/microservices": "^10.3.0",
      "@nestjs/platform-express": "^10.2.10",
      "@nestjs/schedule": "^4.0.0",
      "@nestjs/swagger": "^7.1.16",
      "@prisma/client": "^5.3.1",
      "bcrypt": "^5.1.1",
      "class-transformer": "^0.5.1",
      "class-validator": "^0.14.0",
      "cookie-parser": "^1.4.6",
      "date-fns": "^2.30.0",
      "dotenv-cli": "^7.3.0",
      "jsonwebtoken": "^9.0.2",
      "mqtt": "^5.3.4",
      "nest-winston": "^1.9.4",
      "rimraf": "^5.0.5",
      "winston": "^3.11.0"
    },
    "devDependencies": {
      "@nestjs/cli": "^10.2.1",
      "@nestjs/schematics": "^10.1.0",
      "@nestjs/testing": "^10.2.7",
      "@types/bcrypt": "^5.0.2",
      "@types/cookie-parser": "^1.4.6",
      "@types/express": "^4.17.13",
      "@types/jest": "29.5.11",
      "@types/node": "^20.0.0",
      "@types/supertest": "^6.0.2",
      "@typescript-eslint/eslint-plugin": "^6.18.0",
      "@typescript-eslint/parser": "^6.13.2",
      "eslint": "^8.55.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-jest": "^27.6.2",
      "eslint-plugin-prettier": "^5.0.0",
      "glob": "^10.3.3",
      "jest": "^29.0.0",
      "jest-extended": "^4.0.2",
      "jest-mock-extended": "^3.0.5",
      "prettier": "^3.2.4",
      "prisma": "^5.8.0",
      "source-map-support": "^0.5.20",
      "supertest": "^6.1.3",
      "ts-jest": "^29.0.0",
      "ts-loader": "^9.5.0",
      "ts-node": "^10.0.0",
      "tsconfig-paths": "^4.1.0",
      "typescript": "^5.3.3"
    },
    "jest": {
      "moduleFileExtensions": [
        "js",
        "json",
        "ts"
      ],
      "rootDir": "src",
      "moduleNameMapper": {
        "src/(.*)": "<rootDir>/../src/$1"
      },
      "testRegex": ".*\\.spec\\.ts$",
      "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
      },
      "collectCoverageFrom": [
        "**/*.(t|j)s"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
    }
  }
